                    <ImageView
                        android:id="@+id/home_widget3_podcast_album_iv"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_potcast_exp"
                        app:layout_constraintStart_toStartOf="parent"
