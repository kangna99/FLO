<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_locker_song_coverImg_cv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/item_locker_song_coverImg_Iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_album_exp2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_locker_song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/item_locker_song_coverImg_cv"
        app:layout_constraintBottom_toTopOf="@id/item_locker_song_singer_tv"
        app:layout_constraintStart_toEndOf="@id/item_locker_song_coverImg_cv" />

    <TextView
        android:id="@+id/item_locker_song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_locker_song_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_locker_song_coverImg_cv" />

    <ImageView
        android:id="@+id/item_locker_song_play_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_miniplayer_play"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_locker_song_more_iv"/>

    <ImageView
        android:id="@+id/item_locker_song_more_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>